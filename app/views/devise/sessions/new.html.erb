<section class="vh-100" id="login-section">
  <div class="container-fluid h-custom">
    <div class="row d-flex justify-content-center align-items-center h-100">
      <div class="col-md-9 col-lg-6 col-xl-5">
        <img src="https://mdbcdn.b-cdn.net/img/Photos/new-templates/bootstrap-login-form/draw2.webp"
          class="img-fluid" alt="Sample image">
      </div>
      <div class="col-md-8 col-lg-6 col-xl-4 offset-xl-1">
        <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
          <div class="d-flex flex-row align-items-center justify-content-center justify-content-lg-start">
            <p class="lead fw-normal mb-0 me-3">Sign in with</p>
            <button type="button" class="btn btn-dark btn-floating mx-1">
              <%= fa_icon "facebook" %>
            </button>

            <button type="button" class="btn btn-dark btn-floating mx-1">
              <%= fa_icon "twitter" %>
            </button>

            <button type="button" class="btn btn-dark btn-floating mx-1">
              <%= fa_icon "linkedin" %>
            </button>
          </div>

          <div class="divider d-flex align-items-center my-4">
            <p class="text-center fw-bold mx-3 mb-0">Or</p>
          </div>

          <!-- Email input -->
          <div class="form-outline mb-4">
            <%= f.email_field :email, id:"form3Example3", class: "form-control form-control-lg", placeholder: "Enter a valid email address", autofocus: true, autocomplete: "email" %>
            <%= f.label :email, 'Email address', class: "form-label", for: "form3Example3" %>
          </div>

          <!-- Password input -->
          <div class="form-outline mb-3">
            <%= f.password_field :password, id: "form3Example4", class: "form-control form-control-lg",
            placeholder: "Enter password", autocomplete: "current-password" %>
            <%= f.label :password, class: "form-label", for: "form3Example4" %>
          </div>

          <% if devise_mapping.rememberable? %>          
            <div class="d-flex justify-content-between align-items-center">
              <!-- Checkbox -->
              <div class="form-check mb-0">
                <%= f.check_box :remember_me, class: "form-check-input me-2", id: "form2Example3", value: "" %>
                <%= f.label :remember_me, class: "form-check-label", for: "form2Example3" %>
              </div>

              <%- if devise_mapping.recoverable? %>
                <%= link_to "Forgot password?", new_password_path(resource_name), class: "text-body" %>
              <% end %>
            </div>
          <% end %>

          <div class="text-center text-lg-start mt-4 pt-2">
            <%= f.submit "Login", class: "btn btn-dark btn-lg btn-login" %>
            <p class="small fw-bold mt-2 pt-1 mb-0">
              Don't have an account?
              <%- if devise_mapping.registerable? %>
                <%= link_to "Register", new_registration_path(resource_name), class: "link-danger" %>
              <% end %>
            </p>
          </div>
        <% end %>
      </div>
    </div>
  </div>

  <div
    class="d-flex flex-column flex-md-row text-center text-md-start justify-content-between py-4 px-4 px-xl-5 bg-dark">
    <!-- Copyright -->
    <div class="text-white mb-3 mb-md-0">
      Copyright Â© 2020. All rights reserved.
    </div>
    <!-- Copyright -->

    <!-- Right -->
    <div>
      <a href="#!" class="text-white me-4">
        <%= fa_icon "facebook" %>
      </a>
      <a href="#!" class="text-white me-4">
        <%= fa_icon "twitter" %>
      </a>
      <a href="#!" class="text-white me-4">
        <%= fa_icon "google" %>
      </a>
      <a href="#!" class="text-white">
        <%= fa_icon "linkedin" %>
      </a>
    </div>
    <!-- Right -->
  </div>
</section>
