<%= form_for service_area, html: { class: "page-form" } do |form| %>
  <div class="form-group row">
    <%= form.label :name, class: "col-sm-2 col-form-label" %>
    <div class="col-sm-10">
      <%= form.text_field :name, class: "form-control", placeholder: "Enter a service area name", required: true %>
    </div>
  </div>
  <div class="form-group row">
    <div class="col text-center">
      <%= form.submit class: "btn btn-dark" %>
    </div>
  </div>
<% end %>
